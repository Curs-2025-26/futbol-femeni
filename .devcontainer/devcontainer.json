{
    "name": "Laravel Codespace",
    "dockerFile": "Dockerfile",
    "forwardPorts": [8000,5173],
    "portsAttributes": {
        "8000": { "label": "Laravel" },
        "5173": { "label": "Vite", "onAutoForward": "silent" }
    },
    "postCreateCommand": "composer install && cp -n .env.example .env  && php artisan key:generate && npm ci && npm run build",
    "customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "ryannaddy.laravel-artisan",
                "onecentlin.laravel-blade",
                "esbenp.prettier-vscode"
            ]
        }
    }
}
